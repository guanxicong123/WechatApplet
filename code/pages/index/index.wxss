/**index.wxss**/
.wrapper{
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #eee;
}
/* selector  */
.selector{
  box-sizing: border-box;
  /* display: flex; */
  height: 100rpx;
  padding: 20rpx;
  /* background-color: #f4f4f4; */
}
.selector_bar{
  flex: 1;
  display: flex;
  height: 60rpx;
  position: relative;
}
.icon_select{
  position: absolute;
  right: 18rpx;
  top: 6rpx;
  color: #aaa;
  margin-top: 10rpx;
  font-size: 12px;
}
.nav_select{
  box-sizing: border-box;
  flex: 1;
  margin: 0 auto;
  height: 60rpx;
  background-color: #fff;
  border: 1px solid #aaa;
  border-radius: 20px;
  padding-left: 30rpx;

  font-size: 12px;
}
.bg-one{
  background-color: #f9f1dc;
}
.bg-two{
  background-color: #6cb939;
}
/* 轮播图 */
.banner{
  width: 100%;
  /* height: 200rpx */
}
.banner_img{
  width: 100%;
  height: 100%;
}
.middle{
  margin-top: 10rpx;
  background-color: #fff;
  padding-bottom:30rpx; 
}


/* 分类,一行三个,每个上面图片,下面文字,有1行 */
.classification{
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
}
.c_item{
  width:100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
}
.fenlei_img{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.fenlei_text{
  font-size: 25rpx;
  padding-left: -20rpx;
  margin-top: 15rpx;
}
/* 今日资讯 */
.day{
  margin-top: 15rpx;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  position: relative;
}
.day .img{
  width: 130rpx;
  height: 60rpx;
  margin-top: 10rpx;
}
.day .hot{
  position: absolute;
  top: 20rpx;
  left: 150rpx;
  border: 1px solid #e54d42;
  color: #e54d42;
  font-size: 20rpx;
}
.day text{
  position: absolute;
    left: 220rpx;
  top: 20rpx;
}
/* 整点秒杀 */
.time{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  position: relative;
}
.time .img{
  width: 170rpx;
  height: 80rpx;
}
.time text{
  position: absolute;
  left: 190rpx;
  top: 20rpx;
}
/* 纸尿片系列 */
.news{
    margin-top: 10rpx;
    background-color: #fff
    
}
.news_title{
    padding-top: 10rpx;
    text-align: center;
}
.new_ul{
  overflow: hidden;
  padding-top: 10rpx;
  display: flex; /*这是让里面的东西行者排*/
  flex-wrap: wrap; /*自动换行*/
}
.title_text{
    display: block;
    font-size: 30rpx;
    letter-spacing: 9rpx;
    padding: 30rpx;
    /* height: 60rpx; */
}
.znk_container{

    background-color: #eee;
}
.list_item{
    box-sizing: border-box;
    margin-left:4%;
    width: 45%;
    height: 550rpx;
    display: flex; /*会把里面的所有内容都行着排*/
    /* align-items: center;  内容居中 */
    flex-direction: column; /*这是让里面的内容竖着排*/
    background-color: #fff;
}
.item_img{
    width: 100%;
    height: 300rpx;

}
.item_title{
    height: 85rpx;
    font-size: 30rpx;
    line-height: 40rpx;
    /* 这两句白色的是必须要的,如果要实现两行 */
    text-overflow: -o-ellipsis-lastline;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.cart_news{
  display: inline-block;
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  position: relative;
  font-size: 25rpx;
  color: #c2c2c2;
  line-height: 50rpx;
}
.cart_news_img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 28rpx;
  left: 25rpx;
  margin-left: -15rpx;
  margin-top: -15rpx;
}
.buy{
    display: flex;
    justify-content: space-between; /*两边放*/
    padding-top: 10rpx;
    

}
.item_price{
    font-size: 35rpx;
    color: #ff6767;
}
.btn_buy{
    width: 100rpx;
    font-size: 30rpx;
    border: 1px solid #ff5555;
    color: #ff5555;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 10rpx;
    
  
}
/* 人气热卖 */
.popularity{
  margin-top: 10rpx;
  background-color: #fff
}