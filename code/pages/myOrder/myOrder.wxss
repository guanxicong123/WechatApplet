/* 商品列表 */
.goodLists{
  margin-top: 15rpx;
  background-color: #fff;
  position: relative;
}
.top{
  width: 100%;
  /* height: 50rpx; */
  /* line-height: 50rpx; */
  padding: 30rpx;
}
.type{
  color: #f26565;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.goodList{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1
}
.order_left{
  flex: 1;
}
.goodLists image{
  width: 200rpx;
  height: 200rpx;

}
.order_right{
  flex: 4;
  padding: 30rpx;
  position: relative;
}
.order_right .title{
  width: 300rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}
.order_right .price{
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
  font-size: 30rpx;
}

.btns{
  width: 100%;
  height: 80rpx;
  position: relative;
}
.btn{
  width: 120rpx;
  height: 60rpx;
  background-color: #fe1140;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  right: 50rpx;
  top: 10rpx;
}