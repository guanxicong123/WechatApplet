.selector{
  box-sizing: border-box;
  /* display: flex; */
  height: 100rpx;
  padding: 20rpx;
  background-color: #d4ebd0;
}
.selector_bar{
  flex: 1;
  display: flex;
  height: 60rpx;
  position: relative;
}
.icon_select{
  position: absolute;
  right: 18rpx;
  top: 6rpx;
  color: #aaa;
  margin-top: 10rpx;
  font-size: 12px;
}
.nav_select{
  box-sizing: border-box;
  flex: 1;
  margin: 0 auto;
  height: 60rpx;
  background-color: #fff;
  border: 1px solid #aaa;
  border-radius: 20px;
  padding-left: 30rpx;

  font-size: 12px;
}
/* 搜索框 end */
/* 分类 */
.categories{
  display: flex;
  flex-direction: row;
}
.left{
  flex-grow: 1;
  width: 200rpx;
  /* min-width: 180rpx; */
  background-color: #d4ebd0;
}
.left_ul{

}
.left_item{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
}
.left_item.con{
  background-color: #fcf8f3;
  border-left:3px solid #676768 
}
.right{
  flex-grow: 4;
  background-color: #fcf8f3;
}
.right_title{
  padding-left: 30rpx;
  display: block;
  height: 60rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  color: #679b9b;
}
.right_ul{
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.right_item{
  flex-direction: column;
  width: 150rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-left: 30rpx;
}
.right_item image{
  width: 100rpx;
  height: 100rpx;
}

